  "sample_sampling": {
    "description": "Test MCP sampling capability",
    "method": "POST",
    "endpoint": "/mcp",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "jsonrpc": "2.0",
      "id": "sampling-1",
      "method": "sampling/createMessage",
      "params": {
        "messages": [
          {
            "role": "user",
            "content": {
              "type": "text",
              "text": "I'm having trouble with my account authentication. Can you help me understand what steps I should take to resolve this issue?"
            }
          }
        ],
        "maxTokens": 500,
        "temperature": 0.7
      }
    }
  }
}
